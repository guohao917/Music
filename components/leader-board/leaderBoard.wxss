/* components/leader-board/leaderBoard.wxss */
.board {
  margin: 30rpx;
}

.board-img {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5%;
}
.board-span {
  z-index: 99;
  position: absolute;
  margin-top: -40rpx;
  margin-left: 10rpx;
  font-size: 20rpx;
  color: #fff;
}


.board-content:first-child {
  margin-top: 20rpx;
}

.board-content {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.board-ul {
  display: flex;
  flex-direction: column;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  margin-left: 18rpx;
}

.board-li {
  flex: 1;
  width: 480rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
  color: #676767;
}

.board-li:first-child {
  margin-top: 10rpx;
}

.board-li span {
  font-size: 28rpx;
}