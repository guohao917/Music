/* components/search-list/index.wxss */

.searchlist-content {
  border-bottom: 1rpx solid rgba(197, 195, 195, 0.904);
}

.searchlist-content-span {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 100%;
  height: 140rpx;
}

.searchlist-content-span span {
  display: block;
}

.searchlist-content-span i:first-child {
  color: rgb(20, 142, 199);
  font-size: 24rpx;
}

.searchlist-content-span i:last-child {
  color: rgb(167, 167, 167);
  font-size: 24rpx;
}